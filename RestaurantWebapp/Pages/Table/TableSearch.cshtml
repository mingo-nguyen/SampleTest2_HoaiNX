@page
@model RestaurantWebapp.Pages.TableSearchModel
@{
    ViewData["Title"] = "Table Search";
}

<h1>Table Search</h1>

<h2>Customer Search</h2>
<form method="get">
    <div class="form-group">
        <label for="Seats">Number of Seats</label>
        <input type="number" class="form-control" id="Seats" name="Seats" value="@Model.Seats" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<h2>Admin Search</h2>
<form method="get">
    <div class="form-group">
        <label for="Seats">Number of Seats</label>
        <input type="number" class="form-control" id="Seats" name="Seats" value="@Model.Seats" />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" name="Status" value="@Model.Status" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Tables != null && Model.Tables.Any())
{
    <h2>Search Results</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Seats</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model.Tables)
            {
                <tr>
                    <td>@table.TableNumber</td>
                    <td>@table.Seats</td>
                    <td>@table.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.Tables != null)
{
    <p>No tables found matching the search criteria.</p>
}
