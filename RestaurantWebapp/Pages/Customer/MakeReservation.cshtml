@page
@model RestaurantWebapp.Pages.Customer.MakeReservationModel
@{
    ViewData["Title"] = "Make Reservation";
}

<h1>Make Reservation</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Reservation Details
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Table Number:</dt>
                    <dd class="col-sm-8">@Model.Table.TableNumber</dd>

                    <dt class="col-sm-4">Seats:</dt>
                    <dd class="col-sm-8">@Model.Table.Seats</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">@Model.Table.Status</dd>

                    <dt class="col-sm-4">Date:</dt>
                    <dd class="col-sm-8">@Model.ReservationDate.ToShortDateString()</dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="TableId" />
                    <input type="hidden" asp-for="ReservationDate" />

                    <div class="mb-3">
                        <label asp-for="ReservationTime" class="form-label">Time</label>
                        <select asp-for="ReservationTime" class="form-select">
                            <option value="10:00">10:00 AM</option>
                            <option value="12:00">12:00 PM</option>
                            <option value="14:00">2:00 PM</option>
                            <option value="16:00">4:00 PM</option>
                            <option value="18:00">6:00 PM</option>
                            <option value="20:00">8:00 PM</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SpecialRequests" class="form-label">Special Requests (Optional)</label>
                        <textarea asp-for="SpecialRequests" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="/Customer/TableSearch" class="btn btn-secondary">Back to Search</a>
                        <button type="submit" class="btn btn-primary">Confirm Reservation</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
